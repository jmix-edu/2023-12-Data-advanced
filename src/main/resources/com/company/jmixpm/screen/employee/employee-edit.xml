<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://employeeEdit.caption"
        focusComponent="form">
    <data>
        <instance id="employeeDc"
                  class="com.company.jmixpm.entity.Employee">
            <fetchPlan extends="_base">
                <property name="employeeDetails" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="employeeDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="phoneField" property="phone"/>
                <textField id="salaryField" property="salary"/>
                <textField id="passportNumberField" property="employeeDetails.passportNumber"/>
                <dateField id="expiryDateField" property="employeeDetails.expiryDate"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
